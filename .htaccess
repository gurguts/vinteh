RewriteEngine On

# Проверка наличия параметра lang в URL
RewriteCond %{QUERY_STRING} ^lang=(en|EN) [NC]
RewriteRule ^$ /en/? [L,R=302]

RewriteCond %{QUERY_STRING} ^lang=(ua|UA) [NC]
RewriteRule ^$ /ua/? [L,R=302]

RewriteCond %{QUERY_STRING} ^lang=(de|DE) [NC]
RewriteRule ^$ /dt/? [L,R=302]

RewriteCond %{QUERY_STRING} ^lang=(pl|PL) [NC]
RewriteRule ^$ /pl/? [L,R=302]

# Если параметр lang отсутствует, перенаправление по заголовку Accept-Language
RewriteCond %{REQUEST_URI} ^/$
RewriteCond %{HTTP:Accept-Language} ^(en|EN) [NC]
RewriteRule ^$ /en/? [L,R=302]

RewriteRule ^$ /ua/? [L,R=302]


